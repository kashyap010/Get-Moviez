<%- include('./partials/header') %> 

<%- include('./partials/search-modal') %> 

<!-- MOVIE SECTION -->
  <section class="movie-section">
    <div class="movie-title">
      <div class="movie-title-left">
        <h1 class="movie-name"><%= movie.name.mainName %> </h1>
        <span><%= movie.year %></span>
        |
        <span><%= movie.genre.join('/') %></span>
        |
        <span><%= movie.duration %></span>
        |
        <span><%= movie.language %></span>
      </div>
      <div class="movie-title-right"><a href="javascript:void(0)" id="share-link-icon" onclick="showShareLink()"><i class="fas fa-share-alt" style="color: #000"></i></a></div>
    </div>

    <div id="sharePopup">
      <div class="sharePopup-content">
        <div class="sharePopup-icons-container">
          <div class="sharePopup-icons-container-header">
            <h1>Share</h1>
            <a href="javascript:void(0)" class="close-popup" id="close-share-link" onclick="closeShareLink()"><i class="fas fa-times fa-lg" style="color: black;"></i></a>
          </div>
          <div class="sharePopup-icons-container-body">
            <p style="color:grey;">Click to copy link</p>
            <input class="share-link" type="text" value="https://getmoviez.com/movie-page/<%= movie.name.directoryName %>" size='40' readonly>
          </div>
        </div>
      </div>
    </div>

    <div class="owl-carousel owl-theme" style="margin-top: 0;">
      <div class="item image1" style="background: linear-gradient(
			90deg,
			rgba(0, 0, 0, 0.7206232834930848) 0%,
			rgba(0, 0, 0, 0.11278014623818278) 49%,
			rgba(0, 0, 0, 0.72) 100%
		),
		url('<%= movie.imagesSrc.image1 %>') center/cover;">
        <div class="play-icon-container">
          <a href="javascript:void(0)" class="play-icon blue two" onclick="showTrailer(this)" data-url='<%= movie.embedUrl %> '><i class="fa fa-play"></i></a>
          <h2>Watch Trailer</h2>
        </div>
      </div>
      <div class="item image2" style="background: linear-gradient(90deg, rgba(0,0,0,0.09877454399728647) 0%, rgba(0,0,0,0) 50%, rgba(0,0,0,0.1) 100%),
		url('<%= movie.imagesSrc.image2 %>') center/cover;">
      </div>
      <div class="item image3" style="background: linear-gradient(90deg, rgba(0,0,0,0.09877454399728647) 0%, rgba(0,0,0,0) 50%, rgba(0,0,0,0.1) 100%),
		url('<%= movie.imagesSrc.image3 %>') center/cover;">
      </div>
    </div>

    <div id="playPopup">
      <div class="playPopup-content">
        <a href="javascript:void(0)" class="close-popup" onclick="stopTrailer()"><i class="fas fa-2x fa-times" style="color:#fff"></i></a>
          <div class="playPopup-trailer">
            <iframe id="youtube-trailer" src="<%= movie.embedUrl %> " frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
      </div>
    </div>

    <div class="ratings">
      <div class="rating-type">
        <span><%= movie.ratings.imdb %></span>
        <span title="IMDb"><img class="imdb-logo" src="/logos/imdb-60.png" alt=""></span>
      </div>
      <div class="rating-type">
        <span><%= movie.ratings.rottenTomatoes %>%</span>
        <span title="Tomatometer"><img class="rotten-tomatoes-logo" src="/logos/rotten-tomatoes-certified-fresh.png" alt=""></span>
      </div>
      <div class="rating-type">
        <span><%= movie.ratings.googleUsers %>%</span>
        <span title="Google Users"><img class="google-logo" src="/logos/google.png" alt=""></span>
      </div>
    </div>

    <div class="how-to-download">
    <a href="#"><i class="fa fa-download fa-2x" style="color: black"></i></a>
    <h3 style="display: inline-block;">Download</h3>
    </div>
    <div class="more-details-title">
      <h3>More Details</h3>
      <span class="collapsible-icon"><i class="fas fa-chevron-down"></i></span>
    </div>

    <div class="more-details">
      <div class="more-details-left">
        <span><strong>Size</strong>: <%= movie.sizeUncombined.howMuch %><%= movie.sizeUncombined.unit %></span>
        <span><strong>Quality</strong>: <%= movie.quality %></span>
      </div>
      <div class="more-details-right">
        <span><strong>Director</strong>: <%= movie.director %></span>
        <span><strong>Cast</strong>: <%= movie.cast.join() %></span>
        <span><strong>Film Series</strong>: <%= movie.filmSeries %></span>
      </div>
    </div>

    <div class="synopsis"><%= movie.synopsis %></div>
  </section>
  <!-- MOVIE SECTION END -->

